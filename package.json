{
    "name": "portfolio-tracking-api",
    "version": "1.0.0",
    "description": "",
    "main": "dist/server.js",
    "scripts": {
        "start": "npm run prebuild && npm run watch",
        "build": "npm install --save-dev && npm install && npm run build-ts",
        "serve": "set NODE_ENV=local&&nodemon dist/server.js",
        "build-serve": "npm run build && set NODE_ENV=local&&nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"set NODE_ENV=local&& nodemon dist/server.js\"",
        "test": "set NODE_ENV=test&& jest --detectOpenHandles",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "eslint": "eslint \"src/**/*.ts?(x)\"",
        "prebuild": "npm run format  && npm run eslint",
        "format": "prettier --write --list-different \"**/*.+(ts|tsx|json|scss|css|html)\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.9.2",
        "helmet": "^4.4.1",
        "lodash": "^4.17.20",
        "lusca": "^1.6.1",
        "mongoose": "~5.10.11",
        "uuid": "^8.3.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.11",
        "@types/lodash": "^4.14.168",
        "@types/lusca": "^1.6.2",
        "@types/mongoose": "^5.10.3",
        "@types/node": "^14.14.22",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-sonarjs": "^0.5.0"
    }
}
